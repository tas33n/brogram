# Headless browser mode:
# true  = run Chrome without UI (lower CPU, best for servers)
# false = show the Chrome window (useful for debugging)
HEADLESS=false

# HTTP port for the built-in status server (/ and /uptime and /health)
PORT=3000

# Directory where your exported Cookie-Editor JSON files live
# The app loads the newest JSON from this folder at startup.
COOKIES_DIR=./cookies

# Which actions (modules) to run at startup, comma-separated.
# Built-ins: scroll, reels, like, comment, share
# Extras (if added): follow, unfollow, save, openProfile, explore, dm, viewStories
ACTIONS=scroll,like,comment

# Default recipient for the "share" action (username)
SHARE_TO=

# Default comment text for the "comment" action
COMMENT_TEXT=ðŸ”¥

# Log level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

